<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>

<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets>
        <URL value="@/style/style.css"/>
    </stylesheets>
    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefHeight="350" prefWidth="300"/>
    <HBox>
        <TextField fx:id="fieldText" GridPane.rowIndex="0" GridPane.columnIndex="0" prefHeight="50" prefWidth="200"/>
        <Button text="Отправить" prefWidth="100" prefHeight="100" onAction="#clickButton"/>
    </HBox>

</VBox>
