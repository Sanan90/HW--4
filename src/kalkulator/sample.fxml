<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import java.net.URL?>
<?import javafx.scene.layout.FlowPane?>
<VBox fx:controller="kalkulator.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
    <stylesheets>
        <URL value="@/css/css.css"/>
    </stylesheets>
    <TextArea fx:id="text"  prefWidth="300" prefHeight="60" VBox.vgrow="NEVER" nodeOrientation="RIGHT_TO_LEFT"/>

    <FlowPane>
        <Button  onAction="#onClick" text="0" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button  onAction="#onClick" text="1" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="2" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="3" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="4" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="5" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="6" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="7" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="8" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClick" text="9" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClickAction" text="+" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClickAction" text="-" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClickAction" text="/" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClickAction" text="*" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#onClickAction" text="=" prefWidth="60" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button  onAction="#clear" text="Clear" prefWidth="300" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </FlowPane>

</VBox>
